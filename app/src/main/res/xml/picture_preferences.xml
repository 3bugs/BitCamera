<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.PreferenceCategory
        android:title="BitCamera">

        <android.support.v7.preference.ListPreference
            android:defaultValue="90"
            android:entries="@array/pref_quality_text"
            android:entryValues="@array/pref_quality_values"
            android:key="image_quality"
            android:summary="คุณภาพของภาพถ่าย"
            android:title="Image Quality"/>

        <android.support.v7.preference.ListPreference
            android:defaultValue="mode_in"
            android:entries="@array/pref_resolution_text"
            android:entryValues="@array/pref_resolution_values"
            android:key="image_resolution"
            android:summary="ความละเอียดของภาพถ่าย"
            android:title="Camera Resolution"/>

    </android.support.v7.preference.PreferenceCategory>
</android.support.v7.preference.PreferenceScreen>