<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.PreferenceCategory
        android:title="BitCamera">

        <android.support.v7.preference.ListPreference
            android:defaultValue="mode_in"
            android:entries="@array/pref_mode_text"
            android:entryValues="@array/pref_mode_values"
            android:key="working_mode"
            android:summary="ถ่ายรูปขาเข้า"
            android:title="โหมดใช้งาน"/>

        <android.support.v7.preference.EditTextPreference
            android:defaultValue="192.168.1.2"
            android:dialogMessage="IP bitVisitor"
            android:key="edit_ip"
            android:summary="192.168.1.2"
            android:title="ตั้งค่า IP address"/>

        <android.support.v7.preference.Preference
            android:key="setting_camera"
            android:summary="ตั้งค่า รูปภาพ"
            android:title="ตั้งค่า รูปภาพ"/>

        <android.support.v7.preference.ListPreference
            android:defaultValue="internal"
            android:entries="@array/pref_storage_text"
            android:entryValues="@array/pref_storage_values"
            android:key="images_store"
            android:summary="อุปกรณ์"
            android:title="ตำแหน่งจัดเก็บรูป"/>

        <android.support.v7.preference.EditTextPreference
            android:defaultValue=""
            android:dialogMessage=""
            android:key="about"
            android:summary=""
            android:title="About"/>

        <android.support.v7.preference.ListPreference
            android:defaultValue="auto"
            android:entries="@array/pref_flash_text"
            android:entryValues="@array/pref_flash_values"
            android:key="flash_mode"
            android:summary="ตั้งค่าเริ่มต้นของสถานะแฟลช ให้เปิด, ปิด หรืออัตโนมัติ"
            android:title="การตั้งค่าแฟลช-ทดสอบ"/>

