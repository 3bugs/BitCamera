<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/container"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="watcharaphans.bitcombine.co.th.bitcamera.TouchActivity"
             tools:ignore="MergeRootFrame" >

    <watcharaphans.bitcombine.co.th.bitcamera.touch2focus.PreviewSurfaceView
        android:id="@+id/preview_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </watcharaphans.bitcombine.co.th.bitcamera.touch2focus.PreviewSurfaceView>

    <watcharaphans.bitcombine.co.th.bitcamera.touch2focus.DrawingView
        android:id="@+id/drawing_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </watcharaphans.bitcombine.co.th.bitcamera.touch2focus.DrawingView>

</FrameLayout>